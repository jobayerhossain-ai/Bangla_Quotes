// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER MODEL
// ============================================================================

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String // Hashed password
  name      String
  role      Role      @default(USER)
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // Soft delete

  favorites  Favorite[]
  activities ActivityLog[]

  @@index([email])
  @@map("users")
}

enum Role {
  USER
  SUPER_ADMIN
  CONTENT_MANAGER
  MODERATOR
  ANALYST
}

// ============================================================================
// CATEGORY MODEL
// ============================================================================

model Category {
  id          String  @id @default(cuid())
  nameBn      String
  nameEn      String
  slug        String  @unique
  description String? @db.Text

  // Smart Category Intelligence
  priority      Int     @default(0) // Homepage ranking
  trendingScore Int     @default(0)
  seoTitle      String?
  seoDesc       String? @db.Text

  isActive  Boolean   @default(true)
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // Soft delete

  quotes Quote[]

  @@index([slug])
  @@index([isActive, order])
  @@index([priority, trendingScore])
  @@map("categories")
}

// ============================================================================
// QUOTE MODEL
// ============================================================================

model Quote {
  id         String      @id @default(cuid())
  textBn     String      @db.Text
  textEn     String?     @db.Text
  author     String?
  categoryId String
  status     QuoteStatus @default(DRAFT)

  // Advanced Quote Lifecycle
  lastModifiedBy String?

  // Performance Score & Stats
  views          Int @default(0)
  shares         Int @default(0)
  downloads      Int @default(0)
  favoritesCount Int @default(0)
  studioUsage    Int @default(0)

  performanceScore Float @default(0) // Calculated score

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?
  deletedAt   DateTime? // Soft delete

  category  Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  favorites Favorite[]

  @@index([categoryId, status])
  @@index([status, createdAt])
  @@index([status, views])
  @@index([performanceScore])
  @@map("quotes")
}

enum QuoteStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

// ============================================================================
// STUDIO ASSET MODEL
// ============================================================================

model StudioAsset {
  id        String    @id @default(cuid())
  type      AssetType
  name      String
  value     String    @db.Text
  preview   String?
  isPremium Boolean   @default(false)
  isActive  Boolean   @default(true)
  order     Int       @default(0)

  usageCount Int   @default(0) // Track popularity
  metadata   Json?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // Soft delete

  @@index([type, isActive, order])
  @@map("studio_assets")
}

enum AssetType {
  BACKGROUND_IMAGE
  BACKGROUND_GRADIENT
  FONT
  TEXTURE
}

// ============================================================================
// FAVORITE MODEL
// ============================================================================

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  quoteId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  quote Quote @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  @@unique([userId, quoteId])
  @@index([userId])
  @@index([quoteId])
  @@map("favorites")
}

// ============================================================================
// ANALYTICS MODEL
// ============================================================================

model Analytics {
  id        String         @id @default(cuid())
  quoteId   String?
  event     AnalyticsEvent
  metadata  Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime       @default(now())

  @@index([quoteId])
  @@index([event, createdAt])
  @@index([ipAddress])
  @@map("analytics")
}

enum AnalyticsEvent {
  QUOTE_VIEW
  QUOTE_SHARE
  QUOTE_DOWNLOAD
  STUDIO_OPEN
  CATEGORY_VIEW
}

// ============================================================================
// ACTION LOGS (LEVEL-3)
// ============================================================================

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  entity    String
  entityId  String?
  details   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entity, entityId])
  @@map("activity_logs")
}

// ============================================================================
// FEATURE TOGGLES (LEVEL-4)
// ============================================================================

model FeatureToggle {
  id          String   @id @default(cuid())
  key         String   @unique
  description String?
  isEnabled   Boolean  @default(true)
  updatedBy   String?
  updatedAt   DateTime @updatedAt

  @@map("feature_toggles")
}

// ============================================================================
// SYSTEM SETTINGS (LEVEL-5)
// ============================================================================

model Setting {
  key         String   @id
  value       String   @db.Text
  type        String   @default("string") // string, boolean, number, json
  group       String   @default("general") // general, seo, appearance
  description String?
  isPublic    Boolean  @default(false)    // If true, accessible via public API
  updatedAt   DateTime @updatedAt

  @@map("settings")
}
