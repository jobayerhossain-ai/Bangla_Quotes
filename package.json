{
    "name": "bangla-quotes-platform",
    "version": "1.0.0",
    "private": true,
    "description": "Enterprise-grade Bangla Quotes Web Platform",
    "workspaces": [
        "backend",
        "frontend/web"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "npm run dev --workspace=@bangla-quotes/api",
        "dev:frontend": "npm run dev --workspace=@bangla-quotes/web",
        "build": "npm run build --workspaces",
        "lint": "npm run lint --workspaces",
        "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
        "clean": "rm -rf node_modules && npm run clean --workspaces"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "prettier": "^3.1.1",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    }
}