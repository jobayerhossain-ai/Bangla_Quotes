{
    "name": "bangla-quotes-platform",
    "version": "1.0.0",
    "private": true,
    "description": "Enterprise-grade Bangla Quotes Web Platform",
    "workspaces": [
        "backend",
        "frontend/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
        "clean": "turbo run clean && rm -rf node_modules",
        "type-check": "turbo run type-check"
    },
    "devDependencies": {
        "turbo": "^1.11.2",
        "prettier": "^3.1.1",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    }
}